---
import Layout from "../layouts/Layout.astro";
import { UpdatePasswordForm } from "../components/UpdatePasswordForm";

export const prerender = false;

// Token validation is handled client-side by UpdatePasswordForm
// Supabase uses URL hash fragments (not query params) for password reset tokens
// The client component validates the session via supabaseClient.auth.getSession()
---

<Layout title="Update Password - 10x Cards">
  <UpdatePasswordForm client:load />
</Layout>
